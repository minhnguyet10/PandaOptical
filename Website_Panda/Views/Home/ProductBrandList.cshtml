                                    </ul>
                                </div>
                            </div>
                        </div>
                    </aside>
                    <br />
                    <aside class="wedget__categories poroduct--cat">
                        <h3 class="wedget__title">Brand</h3>
                        @{ Html.RenderAction("BrandList", "Home");}
                    </aside>
                </div>
            </div>

            <div class="col-lg-9 col-12 order-1 order-lg-2">
                @*<div class="row">
                    <div class="col-lg-8">
